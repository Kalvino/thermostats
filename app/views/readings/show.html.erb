<div class="readings">
  <center><h2>Thermostat Readings</h2></center>

  <table cellspacing="0" cellpadding="0" width="80%" align="center">
    <thead>
      <tr style="padding-top:10px; padding-bottom:10px; background-color:#f5f5f5;">
        <th>Id</th>
        <th>Thermostat ID</th>
        <th>Sequence Number</th>
        <th>temperature</th>        
        <th>Humidity</th>        
        <th>Battery Charge</th>        
        <th>Created At</th>        
        <th>Updated At</th>        
        <th>Action</th>        
      </tr>
    </thead>
    <tbody>
      <tr style="background-color:#c56933; height:5px; font-size:0px;">
        <td colspan="9">&nbsp;</td>
      </tr> 
      <tr>
        <th style="padding: 5px"><%= @reading.id %></th>
        <td style="text-align: center; padding: 5px;"><%= @reading.thermostat_id %></td>
        <td style="text-align: center; padding: 5px"><%= @reading.number %></td>
        <td style="text-align: center; padding: 5px"><%= @reading.temperature %></td>
        <td style="text-align: center; padding: 5px"><%= @reading.humidity %></td>
        <td style="text-align: center; padding: 5px"><%= @reading.battery_charge %></td>
        <td style="text-align: center; padding: 5px"><%= @reading.created_at %></td>
        <td style="text-align: center; padding: 5px"><%= @reading.updated_at %></td>
        <td style="text-align: center; padding: 5px"><%= link_to "Back", thermostats_path %></td>
      </tr> 
    </tbody><br/>
  </table>
</div>